datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Club {
  id       String        @id @default(cuid())
  name     String        @unique
  code     String        @unique
  admins   User[]        @relation("ClubAdmins")
  players  Player[]
  requests JoinRequest[]
  users    User[]        @relation("ClubUsers")
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  role         Role
  clubId       String?
  club         Club?      @relation("ClubUsers", fields: [clubId], references: [id])
  adminClubs   Club[]     @relation("ClubAdmins")
}

model Player {
  id        String    @id @default(cuid())
  firstName String
  lastName  String
  number    Int?
  clubId    String
  club      Club      @relation(fields: [clubId], references: [id])
}

model JoinRequest {
  id        String        @id @default(cuid())
  email     String
  name      String?
  clubId    String
  club      Club          @relation(fields: [clubId], references: [id])
  status    RequestStatus @default(PENDING)
  createdAt DateTime      @default(now())
}

enum Role {
  SUPERADMIN
  CLUBADMIN
  SELECTOR
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}
